---
layout: ~
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>Kevin Peterson</title>
  <id>http://kevinp.me/</id>
  <updated>{{ site.time | date_to_xmlschema }}</updated>

  <author>
    <name>Kevin peterson</name>
    <email>kevin@kevinp.me</email>
  </author>

  {% for post in site.posts limit:10 %}
  <entry>
    <title>{{ post.title }}</title>
    <link href="{{ post.url | prefix:'http://kevinp.me' }}"/>
    <id>{{ post.id | prefix:'http://kevinp.me' }}</id>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <summary type="html">{{ post.excerpt | xml_escape }}</summary>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
</feed>
